{
  "name": "ahooks",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alibaba/hooks.git"
  },
  "scripts": {
    "build": "pnpm -r --filter=./packages/* run build",
    "build:doc": "dumi build",
    "clean": "pnpm run clean-dist && rimraf node_modules",
    "clean-dist": "rimraf 'packages/*/{lib,es,node_modules,dist}'",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "dev": "set NODE_OPTIONS=--openssl-legacy-provider && dumi dev",
    "init": "pnpm install && pnpm run build",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "pretty": "biome format --fix --staged",
    "pub": "pnpm run build && pnpm -r --filter=./packages/* publish",
    "pub:beta": "pnpm run build && pnpm -r --filter=./packages/* publish --tag beta",
    "pub:doc": "pnpm run build:doc && pnpm run pub:doc-surge && pnpm run pub:doc-gitee",
    "pub:doc-gitee": "cd ./dist && rm -rf .git && touch .spa && touch .nojekyll && git init && git remote add origin git@gitee.com:ahooks/ahooks.git && git add -A && git commit -m \"publish docs\" && git push origin main -f && echo https://gitee.com/ahooks/ahooks/pages",
    "pub:doc-surge": "surge ./dist --domain ahooks.js.org",
    "start": "pnpm run dev",
    "test": "jest",
    "test:strict": "cross-env REACT_MODE=strict jest"
  },
  "commitlint": {
    "extends": [
      "ali"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "devDependencies": {
    "@ant-design/icons": "^5.6.1",
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "@types/mockjs": "^1.0.10",
    "@types/react-router": "^5.1.20",
    "@umijs/fabric": "^2.14.1",
    "antd": "^5.24.2",
    "babel-plugin-import": "^1.13.8",
    "commitlint-config-ali": "^1.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "del": "^5.1.0",
    "dumi": "^1.1.54",
    "eslint": "^9.21.0",
    "eslint-config-ali": "^16.1.1",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "fast-glob": "^3.3.3",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^15.4.3",
    "mockjs": "^1.1.0",
    "prettier": "^3.5.3",
    "prettier-config-ali": "^1.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-drag-listview": "^0.1.9",
    "react-router": "^6.30.0",
    "react-shadow": "^19.1.0",
    "rimraf": "^3.0.2",
    "surge": "^0.21.7",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^4.2.2"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "pnpm": ">=10 <11"
  }
}
