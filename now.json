{
  "name": "hooks",
  "scope": "umijs",
  "builds": [
    {
      "src": "now-build.sh",
      "use": "@now/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*).(js|css)",
      "headers": {
        "cache-control": "s-maxage=604800"
      },
      "dest": "/$1"
    },
    {
      "src": "/(.*).(json)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}